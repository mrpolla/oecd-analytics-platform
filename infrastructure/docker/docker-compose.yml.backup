version: "3.8"

services:
  minio:
    image: minio/minio:latest
    container_name: oecd-minio
    ports:
      - "9000:9000" # API port
      - "9001:9001" # Web Console port
    environment:
      MINIO_ROOT_USER: minioadmin
      MINIO_ROOT_PASSWORD: minioadmin123
    volumes:
      - ./minio-data:/data
    command: server /data --console-address ":9001"
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:9000/minio/health/live"]
      interval: 30s
      timeout: 20s
      retries: 3
    networks:
      - oecd-network

  nifi:
    image: apache/nifi:1.24.0
    container_name: oecd-nifi
    ports:
      - "8443:8443" # NiFi web interface (HTTPS)
    environment:
      - NIFI_WEB_HTTPS_PORT=8443
      - SINGLE_USER_CREDENTIALS_USERNAME=admin
      - SINGLE_USER_CREDENTIALS_PASSWORD=adminpassword123
    volumes:
      - ./nifi-data:/opt/nifi/nifi-current/ls-target
      - ./nifi-conf:/opt/nifi/nifi-current/conf
      - ../../etl/nifi-flows:/opt/nifi/nifi-current/flows
    networks:
      - oecd-network

networks:
  oecd-network:
    driver: bridge
